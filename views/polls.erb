<script>
  $(function() {
    $( "#after" ).datepicker({
      defaultDate: "+1w",
      changeMonth: true,
      numberOfMonths: 1,
      onClose: function( selectedDate ) {
        $( "#after" ).datepicker( "option", "minDate", selectedDate );
      }
    });
    $( "#before" ).datepicker({
      defaultDate: "+1w",
      changeMonth: true,
      numberOfMonths: 1,
      onClose: function( selectedDate ) {
        $( "#before" ).datepicker( "option", "maxDate", selectedDate );
      }
    });
  });
  </script>
