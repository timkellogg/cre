          %option{:value => "WV"} WV
          %option{:value => "WI"} WI
          %option{:value => "WY"} WY
      .form-group
        .col-md-4
          %label.control-label{:for => "term_class"} Re-Election Year (Senate Only):
          %select.form-control{:name => "term_class"}
            %option{:value => ""}
            %option{:value => "1"} 2018
            %option{:value => "3"} 2016
            %option{:value => "2"} 2014
      .form-group
        .col-md-4
          %label.control-label{:for => "party"} Party:
          %select.form-control{:name => "party"}
            %option{:value => ""}
            %option{:value => "D"} Democrat
            %option{:value => "I"} Independent
            %option{:value => "R"} Republican
      .form-group
        .col-md-4
          %label.control-label{:for => "is_incumbent"} Incumbent?
          %select.form-control{:name => "is_incumbent"}
            %option{:value => ""}
            %option{:value => "False"} False
            %option{:value => "True"} True
      .row.btn-container
        %button.btn.btn-default.btn-lg
          Search
          %span.glyphicon.glyphicon-search{"aria-hidden" => "true"}
:javascript
  $(function() {
    $( "#start_date" ).datepicker({
      defaultDate: "+1w",
      changeMonth: true,
      numberOfMonths: 1,
      onClose: function( selectedDate ) {
        $( "#end_date" ).datepicker( "option", "minDate", selectedDate );
      }
    });
    $( "#end_date" ).datepicker({
      defaultDate: "+1w",
      changeMonth: true,
      numberOfMonths: 1,
      onClose: function( selectedDate ) {
        $( "#start_date" ).datepicker( "option", "maxDate", selectedDate );
      }
    });
  });
