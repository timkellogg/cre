<h2>Your results</h2>
<% if !@delimiters.empty? %>
<p class="limiters">You searched for <%= @result %>:</p>	
	<ul>
	<% @delimiters.split(',').each do |line|  %>
		<li><%= line %></li>
	<% end %>
	</ul>
<% end %>


<h3>Your search delivered <%= @result.count %> results</h3>

<% if @result.any? %>
	<% @result.each_with_index do |result, index| %> 
	<div class="col-md-12">
		<p class="result-number"><%=index + 1%></p>
		<table class="table table-striped table-hover table-condensed">
		  <tr><th class="table-heading" colspan="15"><%= result["survey_houses"][0]["name"] %></th></tr>
		  <tr><th class="table-sub-heading" colspan="15">Basic Poll Information</th></tr>
		  <tr>
		  	<td class="table-title" colspan="1">Source:</td>
		  	<td class="table-content" colspan="14"><a href="<%= result["source"]%>"><%= result["source"] %></a></td>
		  </tr>
		  <tr>
		    <td class="table-title" colspan="1">Started:</td>
		    <td class="table-content" colspan="14"><%= result["start_date"] %></td>
		  </tr>
		  <tr>
		  	<td class="table-title" colspan="1">Ended:</td>
		  	<td class="table-content" colspan="14"><%= result["end_date"] %></td>
		  </tr>
		  <tr>
		  	<td class="table-title" colspan="1">Method:</td>
		  	<td class="table-content" colspan="14"><%= result["method"] %></td>
		  </tr>
		  <tr><th class="table-sub-heading" colspan="15">Poll Topics</th></tr>
		  <!-- Topic of Polls -->
		  <% result["questions"].each_with_index do |question, index| %>
		  <tr><td class="table-tertiary-heading" colspan="15"><%= question["name"] %></td></tr>
		  <tr>
		  	<td class="table-title" colspan="1">Pool:</td>
		  	<td class="table-content" colspan="14"><%= question["subpopulations"][0]["name"] %></td> 
		  </tr>
		  <tr>
		  	<td class="table-title" colspan="1">Population:</td>
		  	<td class="table-content" colspan="14"><%= question["subpopulations"][0]["observations"] %></td>
		  </tr>
		  <tr>
		  	<td class="table-title" colspan="1">Error Margin:</td>
		  	<td class="table-content" colspand="14"> <%= convert_nil(question["subpopulations"][0]["margin_of_error"]) %></td>
		  </tr>
			  <!-- Poll Responses -->
			  <% question["subpopulations"][0]["responses"].each do |response| %>
			  	<tr>
			    	<td class="table-title" colspan="1"><%= response["choice"] %></td>
			    	<td class="table-content" colspan="14"><%= response["value"] %></td>
			  	</tr>
			  <% end %>
		  <% end %>
		</table>
	</div>	
	<% end %>
<% else %>
	<div class="row" id="result-none">
		<p>Oh, no! There were no results. Search <a href="/polls">again?</a></p>
	</div>
<% end %> 



